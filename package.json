{
  "name": "@davidsneighbour/imagemin-lint-staged",
  "version": "0.5.2",
  "description": "imagemin CLI designed for lint-staged usage with sensible defaults",
  "license": "MIT",
  "maintainers": [
    {
      "name": "davidsneighbour",
      "email": "patrick@davids-neighbour.com",
      "url": "https://github.com/davidsneighbour"
    }
  ],
  "author": {
    "name": "tomchentw",
    "email": "developer@tomchentw.com",
    "url": "https://github.com/tomchentw"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidsneighbour/imagemin-lint-staged"
  },
  "bugs": {
    "url": "https://github.com/davidsneighbour/imagemin-lint-staged/issues"
  },
  "homepage": "https://github.com/davidsneighbour/imagemin-lint-staged/",
  "bin": "bin/index.js",
  "files": [
    "bin/",
    "lib/",
    "CHANGELOG.md"
  ],
  "keywords": [
    "imagemin",
    "CLI",
    "git hook",
    "compress images",
    "lint-staged"
  ],
  "scripts": {
    "test": "jest --runInBand",
    "release": "standard-version"
  },
  "lint-staged": {
    "*.{png,jpeg,jpg,gif,svg}": [
      "node ./bin/index.js"
    ],
    "*.{js,jsx,json,css}": [
      "prettier --write"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "\\d+\\.\\d+\\.\\d+"
    ]
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "util.promisify": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "babel-jest": "^29.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
